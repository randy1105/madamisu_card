<div class="main">
  <div class="side-box">
   <ul class="lists">
      <li class="list"><a href="#">通過一覧</a></li>
      <li class="list"><a href="#">カレンダー</a></li>
      <li class="list"><a href="#">お知らせ</a></li>
      <li class="list"><a href="#">シナリオ検索</a></li>
    </ul>
  </div>
  <div class="main-box">
    <div class="num">
      登録シナリオ数は<%= @scenarios.count %>話です。
    </div>
    <% @scenarios.each do |scenario| %>
      <div class="scenarios">
        <div class="s-title">
          <div class="calm">
            タイトル
          </div>
          <%= link_to scenario.title, scenario_path(scenario.id) %>
        </div>
        <div class="production">
          <div class="calm">
            作者
          </div>
          <%= scenario.production %>
        </div>
        <div class="people">
          <div class="calm">
            人数
          </div>
          <%= scenario.people.name %>
        </div>
      </div>
    <% end %>
  </div>
</div>